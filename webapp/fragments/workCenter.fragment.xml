<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog
		id="workCenterSelectDialogId"
		title="Centro di Lavoro"
		items="{workCenter>/}"
		search=".onValueHelpWorkCenterSearch"
		confirm=".onValueHelpWorkCenterClose"
		cancel=".onValueHelpWorkCenterClose">
		<StandardListItem
			icon="sap-icon://commission-check"
			title="{workCenter>ARBPL}"
            iconDensityAware="true"
			iconInset="false"
            iconActive="true"
            key="{workCenter>ARBPL}"
			description="{workCenter>DESCR_ARBPL}" />
	</SelectDialog>
</core:FragmentDefinition>