<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog
		id="workCenterSelectDialogId"
		title="Products"
		items="{workCenter>/}"
		search=".onValueHelpWorkCenterSearch"
		confirm=".onValueHelpWorkCenterClose"
		cancel=".onValueHelpWorkCenterClose">
		<StandardListItem
			icon="sap-icon://commission-check"
			title="{workCenter>code}"
            iconDensityAware="true"
			iconInset="false"
            iconActive="true"
            key="{workCenter>code}"
			description="{workCenter>Descr}" />
	</SelectDialog>
</core:FragmentDefinition>